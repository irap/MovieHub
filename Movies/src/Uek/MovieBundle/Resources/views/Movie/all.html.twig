{% extends 'base.html.twig' %}

{% block content %}
<div class="container-fluid">
        {% for movie in movies %}
		<div class="row">
			<div class="col-xs-1">
    	    <a href="/movies/movie/{{ movie.getId() }}"><img src="{{ movie.getCoverImageRef() }}"></a> 
    	    <p></p>
    	    </div>
    	    
    	    <div class="col-xs-3">
        		<p>{{ movie.getTitle() }}</p>
        		<p><a href="/movies/movie/{{ movie.getId() }}" class="btn btn-sm" role="button">More...</a></p>
        		
        	</div>
    	 </div>
        {% endfor %}
</div>
{% endblock content %}
        